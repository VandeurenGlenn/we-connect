{
	"name": "we-connect",
	"productName": "we connect",
	"version": "0.0.0",
	"description": "My stellar app",
	"license": "MIT",
	"repository": "vandeurenglenn/we-connect",
	"author": {
		"name": "vandeurenglenn",
		"email": "vandeurenglenn@gmail.com",
		"url": "github.com/VandeurenGlenn"
	},
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"lint": "xo",
		"test": "npm run lint",
		"start": "electron .",
		"pack": "electron-builder --dir",
		"dist": "electron-builder --macos --linux --windows",
		"dist:windows": "electron-builder --windows",
		"build": "rollup -c",
		"watch": "rollup -c -w",
		"release": "np"
	},
	"dependencies": {
		"@leofcoin/peernet": "^0.14.13",
		"@vandeurenglenn/rollup-plugin-template": "^0.1.0",
		"electron-context-menu": "^3.4.0",
		"electron-debug": "^3.2.0",
		"electron-store": "^8.1.0",
		"electron-unhandled": "^4.0.1",
		"electron-updater": "^5.2.1",
		"electron-util": "^0.17.2",
		"lit": "^2.3.1"
	},
	"devDependencies": {
		"@rollup/plugin-node-resolve": "^14.1.0",
		"electron": "^13.0.0",
		"electron-builder": "^23.3.3",
		"np": "^7.6.2",
		"rollup": "^2.79.1",
		"xo": "^0.51.0"
	},
	"xo": {
		"envs": [
			"node",
			"browser"
		],
		"rules": {
			"unicorn/prefer-module": "off"
		}
	},
	"np": {
		"publish": false,
		"releaseDraft": false
	},
	"build": {
		"appId": "com.vandeurenglenn.weconnect",
		"mac": {
			"category": "public.app-category.social-networking",
			"darkModeSupport": true
		},
		"dmg": {
			"iconSize": 160,
			"contents": [
				{
					"x": 180,
					"y": 170
				},
				{
					"x": 480,
					"y": 170,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"linux": {
			"target": [
				"AppImage",
				"deb"
			],
			"category": "Network;Chat"
		}
	}
}
